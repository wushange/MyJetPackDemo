<resources>


    <!--********************* TopBar *********************-->
    <style name="AUI.TopBar">
        <item name="aui_topbar_separator_color">?attr/aui_config_color_separator</item>
        <item name="aui_topbar_separator_height">1px</item>
        <item name="aui_topbar_bg_color">@color/aui_config_color_white</item>
        <item name="aui_topbar_need_separator">true</item>
        <item name="aui_topbar_left_back_drawable_id">@drawable/aui_icon_topbar_back</item>
        <item name="aui_topbar_title_gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="aui_topbar_title_color">?attr/aui_config_color_gray_1</item>
        <item name="aui_topbar_title_text_size">17sp</item>
        <item name="aui_topbar_title_text_size_with_subtitle">16sp</item>
        <item name="aui_topbar_title_margin_horizontal_when_no_btn_aside">0dp</item>
        <item name="aui_topbar_title_container_padding_horizontal">8dp</item>
        <item name="aui_topbar_subtitle_text_size">11sp</item>
        <item name="aui_topbar_subtitle_color">@color/aui_config_color_gray_1</item>
        <item name="aui_topbar_image_btn_width">48dp</item>
        <item name="aui_topbar_image_btn_height">48dp</item>
        <item name="aui_topbar_text_btn_padding_horizontal">12dp</item>
        <item name="aui_topbar_text_btn_color_state_list">@color/aui_topbar_text_color</item>
        <item name="aui_topbar_text_btn_text_size">16sp</item>
    </style>
    <!--********************* Button *********************-->
    <style name="AUI.RoundButton" parent="@style/AUIButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:padding">0dp</item>--><!-- 不用 android:padding，而用各个方向分别指定 padding，方便子类覆盖 -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="aui_isRadiusAdjustBounds">true</item>
        <item name="aui_backgroundColor">@color/aui_s_transparent</item>
        <item name="aui_borderWidth">?attr/aui_round_btn_border_width</item>
        <item name="aui_borderColor">?attr/aui_round_btn_border_color</item>
        <item name="android:textColor">?attr/aui_round_btn_text_color</item>
    </style>


</resources>